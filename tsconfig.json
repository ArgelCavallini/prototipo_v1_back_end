{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}